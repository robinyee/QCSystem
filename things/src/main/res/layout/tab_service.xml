                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="流程控制"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow android:layout_marginTop="10dp">

                    <Switch
                        android:id="@+id/s1_inletWater"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="进水样"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/s2_addReagent"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="加标样"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/s3_supplySamples"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="供水样"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/s4_initialize"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="初始化"
                        android:theme="@style/MySwitch" />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">
                    <Switch
                        android:id="@+id/s8_clean"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="清洗容器"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/s5_reset"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="系统复位"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/s6_reboot"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="重新启动"
                        android:theme="@style/MySwitch" />
                </TableRow>
                <TableRow android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="选择标样类型"/>
                    <Spinner
                        android:id="@+id/spinner_WaterType"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:entries="@array/waterTyep" />
                    <Spinner
                        android:id="@+id/spinner_SampleType"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:entries="@array/sampleTyep" />
                    <Switch
                        android:id="@+id/s7_start"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="启动"
                        android:theme="@style/MySwitch" />
                </TableRow>
            </TableLayout>
