                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/c2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="C2"
                        android:theme="@style/MySwitch" />

