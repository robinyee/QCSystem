<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="系统维护"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/line2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="基本输出"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow android:layout_marginTop="10dp">

                    <Switch
                        android:id="@+id/d1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="V1"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/d2"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="V2"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/d3"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="V3"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/d4"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="V4"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/d5"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="V5"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/d6"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="V6"
                        android:theme="@style/MySwitch" />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <Switch
                        android:id="@+id/d7"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="V7"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/d8"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="V8"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/p1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="P1"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/p2"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="P2"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/p3"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="P3"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/h1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="S1"
                        android:theme="@style/MySwitch" />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <Switch
                        android:id="@+id/dc1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="M1F"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/dc1_r"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="M1R"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/dc2"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="M2F"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/dc2_r"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="M2R"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/led"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="L1"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/v24"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="AD"
                        android:theme="@style/MySwitch" />
                </TableRow>
            </TableLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/line2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="流程控制"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow android:layout_marginTop="10dp">

                    <Switch
                        android:id="@+id/s1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="氨氮标样"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/s2"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="总氮标样"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/s3"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="总磷标样"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/s4"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="COD标样"
                        android:theme="@style/MySwitch" />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <Switch
                        android:id="@+id/s5"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="氨氮加标"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/s6"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="总氮加标"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/s7"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="总磷加标"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/s8"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="COD加标"
                        android:theme="@style/MySwitch" />

                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <Switch
                        android:id="@+id/s9"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="仪器初始化"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/s10"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="仪表清洗"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/s11"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="系统复位"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/s12"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="重新启动"
                        android:theme="@style/MySwitch" />
                </TableRow>
            </TableLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/line2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="试剂状态"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow android:layout_marginTop="10dp">

                    <Switch
                        android:id="@+id/switchIn1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="氨氮母液"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/switchIn2"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="总氮母液"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/switchIn3"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="总磷母液"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/switchIn4"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="COD母液"
                        android:theme="@style/MySwitch" />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <Switch
                        android:id="@+id/switchIsNotice"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="清洗液"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/switchIsEmptyPipeline"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="纯水"
                        android:theme="@style/MySwitch" />
                </TableRow>
            </TableLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/line2" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="软件版本："
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:text="@string/version"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="硬件版本：1.0"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="发布日期：2021年10月"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:text="系统设计：叶文彬"
                        android:textSize="12sp" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>