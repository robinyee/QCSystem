                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/d4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="D4"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/d5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="D5"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/d6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="D6"
                        android:theme="@style/MySwitch" />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <Switch
                        android:id="@+id/d8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="D8"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/p1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="P1"
                        android:theme="@style/MySwitch" />

                    <Switch
                        android:id="@+id/p2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
